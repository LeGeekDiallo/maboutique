    <div class="__column">
        {{ form_label(formCart.productSize, '* La taille') }}
        {{ form_widget(formCart.productSize) }}
    </div>
    <div class="__column">
        {{ form_label(formCart.productQuantity, '* La quantit√©') }}
        {{ form_widget(formCart.productQuantity) }}
