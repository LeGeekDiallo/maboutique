<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="description" content="plateforme boutique en ligne en GuinÃ©e">
        <meta name="keywords" content="boutique, boutique en ligne">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <nav class="__nav_bar">
        <div class="__home_link"><a href="{{ path('ma_boutique') }}">Ma<span>Boutique</span></a></div>
        <div class="__home_links">
            <div class="__new_shop">
                {% if app.user and app.user.userType is same as("ROLE_MERCHANT") %}
                    <a href="{{ path('new_shop_welcome') }}" id="__new_shop_computer">Ouvrir ma boutique <span><i class="fas fa-plus"></i></span></a>
                    <a href="{{ path('new_shop_welcome') }}" id="__new_shop_small_device" class="btn"><i class="fas fa-store"></i></a>
                    {% elseif not app.user %}
                        <a href="{{ path('new_shop_welcome') }}" id="__new_shop_computer">Ouvrir ma boutique <span><i class="fas fa-plus"></i></span></a>
                        <a href="{{ path('new_shop_welcome') }}" id="__new_shop_small_device" class="btn"><i class="fas fa-store"></i></a>
                {% endif %}
            </div>
            <div class="__sign_log_links">
                {% if app.user %}
                    <div class="__user_av">
                        <a href="{{ path('client') }}"><img src="{{ asset('images/avatar_def.png') }}" alt="user avatar"></a>
                    </div>
                    <div class="__log_out">
                        <a href="{{ path('app_logout') }}"><i class="fas fa-power-off"></i> Deconnexion</a>
                    </div>

                    {% else %}
                        <div class="__sign_log">
                            <a href="{{ path('inscription') }}" class="btn"><i class="fas fa-user-plus"></i></a>
                            <a href="{{ path('login_user') }}" class="btn"><i class="fas fa-sign-in-alt"></i></a>
                        </div>
                {% endif %}
            </div>
        </div>
    </nav>
    {% block body %}{% endblock %}
    </body>
</html>
